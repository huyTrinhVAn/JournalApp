<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ET1_MA_Password"
        android:layout_width="325dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:layout_marginTop="72dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ACTV_MA_Email" />

    <AutoCompleteTextView
        android:id="@+id/ACTV_MA_Email"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_marginTop="108dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV1_MA_Welcome" />

    <TextView
        android:id="@+id/TV1_MA_Welcome"
        android:layout_width="284dp"
        android:layout_height="54dp"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:text="Welcome to journal app"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BT1_MA_Signin"
        android:layout_width="115dp"
        android:layout_height="58dp"
        android:layout_marginTop="96dp"
        android:text="Sign in"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET1_MA_Password" />

    <Button
        android:id="@+id/BT2_MA_Register"
        android:layout_width="115dp"
        android:layout_height="58dp"

        android:layout_marginTop="88dp"
        android:text="Register"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BT1_MA_Signin" />


</androidx.constraintlayout.widget.ConstraintLayout>